{{#each blogs as |blog| }}
<div class="card m-3 col-5 col-sm-10">
    <a href="/blogs/{{id}}" class="card-header fs-3 fw-bold">{{title}}</a>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{description}}.</p>
            <p class="blockquote-footer mt-3">Created by {{user.name}} on {{format_date date_created}}.
            </p>
        </blockquote>
    </div>
</div>
{{/each}}