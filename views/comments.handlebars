<section class="user-info">
    <h2>Welcome, {{user.name}}</h2>
</section>

<section class="">
    <div class="col-md-5">
        <h2>{{title}}</h2>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{description}}
        </p>
    </div>
    {{#if comments.length}}
    <div class="grid">
        {{#each comments}}
        {{> comment}}
        {{/each}}
    </div>
    {{/if}}

    <form id="commentForm" class="mt-3" userid="{{user_id}}" blogid="{{id}}">
        <div class="mb-3">
            <label for="blogCommnet" class="form-label">Please place your comment</label>
            <input class="form-control" id="blogComment" placeholder="comments">
        </div>
        <button type="button" class="btn btn-primary" id="submitComment">submit</button>
    </form>
</section>

<script src="/js/comment.js"></script>